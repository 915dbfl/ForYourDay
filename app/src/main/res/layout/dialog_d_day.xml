<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_layout"
    android:backgroundTint="@color/rectangle_layout"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="✔️ D-DAY"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="레이블"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/textview_d_day_label"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="날짜"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:id="@+id/textview_d_day_date"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="D-DAY"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:id="@+id/textview_d_day"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:backgroundTint="#FFF"
            android:background="@drawable/rectangle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/textview_d_day_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="category"/>
            <LinearLayout
                android:id="@+id/category_color"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="@color/rectangle_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_layout"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="10dp"
            android:id="@+id/btn_d_day_modify"
            android:text="수정"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_layout"
            android:backgroundTint="@color/white"
            android:text="삭제"
            android:id="@+id/btn_d_day_delete"/>
    </LinearLayout>
</LinearLayout>