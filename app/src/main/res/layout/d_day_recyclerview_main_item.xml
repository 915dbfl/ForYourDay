<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_layout"
    android:backgroundTint="@color/rectangle_layout"
    android:layout_marginTop="5dp"
    android:paddingStart="15dp"
    android:paddingEnd="0dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/d_day_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="D - 1"
        android:textColor="@color/text_color"
        android:id="@+id/d_day_amount"
        android:textStyle="bold"/>
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/d_day_amount"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle_layout"
        android:layout_marginStart="10dp"
        android:id="@+id/d_day_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="중요"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_marginEnd="25dp"
        android:id="@+id/category_color"
        android:layout_width="80dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="@id/d_day_content"
        app:layout_constraintRight_toRightOf="@id/d_day_content"
        android:orientation="horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>